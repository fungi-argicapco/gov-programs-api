          "benefits",
          "country_code",
          "created_at",
          "criteria",
          "id",
          "industry_codes",
          "jurisdiction_code",
          "status",
          "tags",
          "title",
          "uid",
          "updated_at"
        ]
      },
      "SourceResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "url": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "license": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "tos_url": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "authority_level": {
            "type": "string"
          },
          "jurisdiction_code": {
            "type": "string"
