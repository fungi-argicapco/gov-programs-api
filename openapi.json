                "type": "number"
              },
              {
                "type": "null"
              }
            ]
          },
          "currency_code": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "notes": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": [
          "type",
          "min_amount_cents",
          "max_amount_cents",
          "currency_code",
          "notes"
        ],
        "additionalProperties": false
      },
      "ProgramCriterionResponse": {
        "type": "object",
        "properties": {
          "kind": {
            "type": "string"
          },
          "operator": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "kind",
          "operator",
          "value"
        ],
        "additionalProperties": false
      },
      "ProgramResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "uid": {
            "type": "string"
          },
          "country_code": {
            "type": "string",
            "enum": [
              "US",
              "CA"
            ]
          },
          "authority_level": {
            "type": "string",
            "enum": [
              "federal",
              "state",
              "prov",
              "territory",
              "regional",
              "municipal"
            ]
          },
          "jurisdiction_code": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "summary": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "benefit_type": {
            "anyOf": [
              {
                "$ref": "#/components/schemas/ApiBenefitType"
