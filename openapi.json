              },
              {
                "type": "null"
              }
            ]
          },
          "n": {
            "type": "number"
          }
        },
        "required": [
          "benefit_type",
          "n"
        ],
        "additionalProperties": false
      },
      "HealthResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "service": {
            "type": "string"
          }
        },
        "required": [
          "ok",
          "service"
        ],
        "additionalProperties": false
      }
    }
  }
