          "summary": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "benefit_type": {
            "anyOf": [
              {
                "$ref": "#/components/schemas/ApiBenefitType"
              },
