              {
                "type": "null"
              }
            ]
          },
          "created_at": {
            "type": "number"
          },
          "updated_at": {
            "type": "number"
          },
          "benefits": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProgramBenefitResponse"
            }
          },
          "criteria": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProgramCriterionResponse"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
