{
  "name": "gov-programs-api",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev:api": "bunx wrangler dev --local",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:vitest": "vitest run",
    "setup": "bun run scripts/setup.ts",
    "setup:local": "bun run scripts/setup.ts --local",
    "setup:remote": "bun run scripts/setup.ts --remote",
    "deploy": "bun run scripts/deploy.ts",
    "datasets:build": "bun run scripts/generate-techland-dataset.ts && bun run scripts/generate-cognitiveos-dataset.ts && bun run scripts/generate-macro-dataset.ts && bun run scripts/generate-government-programs-dataset.ts && bun run scripts/generate-climate-esg-dataset.ts",
    "typecheck": "bunx tsc -p tsconfig.json",
    "lint": "bun run typecheck",
    "openapi": "bun run scripts/generate-openapi.ts",
    "ingest:once": "bun run scripts/ingest-once.ts",
    "postdeploy:validate": "bun run scripts/postdeploy.validate.ts",
    "web:dev": "bunx vite --config apps/web/vite.config.ts",
    "web:build": "bunx vite build --config apps/web/vite.config.ts",
    "web:preview": "bunx vite preview --config apps/web/vite.config.ts"
  },
  "dependencies": {
    "@cloudflare/d1": "^1.4.1",
    "better-sqlite3": "^9.4.0",
    "cheerio": "^1.0.0-rc.12",
    "currency.js": "^2.0.4",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.9.9",
    "node-fetch": "^3.3.2",
    "otpauth": "^9.4.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250921.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^24.6.1",
    "bun-types": "^1.2.23",
    "node-gyp": "^9.4.1",
    "svelte": "^4.2.18",
    "ts-to-openapi": "^1.3.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.8",
    "vitest": "^3.2.4",
    "wrangler": "^4.40.3"
  }
}
