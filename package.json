  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250921.0",
    "@types/node": "^24.5.2",
    "bun-types": "^1.2.22",
    "ts-to-openapi": "^1.3.0",
    "typescript": "^5.9.2",
